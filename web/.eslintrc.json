{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "cypress/globals": true,
    "jest/globals": true
  },
  "extends": [
    "next/babel",
    "next/core-web-vitals",
    "plugin:react/recommended",
    "standard",
    "plugin:cypress/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "cypress",
    "jest"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "react/display-name": "off"
  }
}